<resources>

    <!-- the problem attributes from parent="" overwrite that ones from '.' derivation -> -->
    <!-- as Light and Dark theme have different parents we have to define these properties redundantly -->

    <style name="AppThemeLightBase" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryGradientStart">@color/colorPrimaryGradientEnd</item>
        <item name="colorPrimaryGradientEnd">@color/colorPrimaryGradientEnd</item>

        <item name="header1TextColor">@color/header1TextColor_Light</item>
        <item name="header2TextColor">@color/header2TextColor_Light</item>
        <item name="textBodyTextColor">@color/textBodyTextColor_Light</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- defined in AndroidUtils -->
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>

        <item name="fabTextColor">@color/fabTextColor_Light</item>
        <item name="fabLabelBackgroundColor">@color/fabLabelBackgroundColor_Light</item>
        <item name="fabShadowColor">@color/fabShadowColor_Light</item>

        <item name="backgroundColor">@color/backgroundColor_Light</item>

        <item name="dialogsAndCardsBackgroundColor">@color/dialogsAndCardsBackgroundColor_Light</item>

        <item name="listItemBackground">@drawable/list_item_background</item>
        <item name="unselectedItemTextColor">@color/unselectedItemTextColor_Light</item>

        <item name="dividerColor">@color/dividerColor_Light</item>

        <item name="editEntityActivityBackground">@color/editEntityActivityBackground_Light</item>

        <item name="entityFieldValueTextColor">@android:color/black</item>

        <item name="viewTagTextColor">@color/viewTagTextColor_Light</item>
        <item name="viewTagBackground">@color/viewTagBackground_Light</item>

        <item name="viewPdfSelectPageTextColor">?attr/header1TextColor</item>

        <item name="richTextEditorFullscreenOptionsBarBackground">@color/colorPrimary_50PercentAlpha</item>
        <item name="richTextEditorFullscreenOptionsBarSearchViewBackground">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDarkBase" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>

        <item name="colorPrimaryGradientStart">@color/colorPrimaryGradientEnd_Dark</item>
        <item name="colorPrimaryGradientEnd">@color/colorPrimaryGradientEnd_Dark</item>

        <item name="header1TextColor">@color/header1TextColor_Dark</item>
        <item name="header2TextColor">@color/header2TextColor_Dark</item>
        <item name="textBodyTextColor">@color/textBodyTextColor_Dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- defined in AndroidUtils -->
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionModeBackground">@color/colorPrimary_Dark</item>

        <item name="fabTextColor">@color/fabTextColor_Dark</item>
        <item name="fabLabelBackgroundColor">@color/fabLabelBackgroundColor_Dark</item>
        <item name="fabShadowColor">@color/fabShadowColor_Dark</item>

        <item name="backgroundColor">@color/backgroundColor_Dark</item>

        <item name="dialogsAndCardsBackgroundColor">@color/dialogsAndCardsBackgroundColor_Dark</item>

        <item name="listItemBackground">@drawable/list_item_background_dark</item>
        <item name="unselectedItemTextColor">@color/unselectedItemTextColor_Dark</item>

        <item name="dividerColor">@color/dividerColor_Dark</item>

        <item name="editEntityActivityBackground">?attr/backgroundColor</item>

        <item name="entityFieldValueTextColor">?attr/textBodyTextColor</item>

        <item name="viewTagTextColor">@color/viewTagTextColor_Dark</item>
        <item name="viewTagBackground">@color/viewTagBackground_Dark</item>

        <item name="viewPdfSelectPageTextColor">?attr/header1TextColor</item>

        <item name="richTextEditorFullscreenOptionsBarBackground">@color/colorPrimary_50PercentAlpha_Dark</item>
        <item name="richTextEditorFullscreenOptionsBarSearchViewBackground">@color/colorPrimary_Dark</item>
    </style>

    <style name="AppThemeLight" parent="AppThemeLightBase">
        <!-- adds nothing to AppThemeBase but in v21/styles.xml specific attributes for Lollipop and above are added -->
    </style>

    <style name="AppThemeDark" parent="AppThemeDarkBase">
        <!-- adds nothing to AppThemeBase but in v21/styles.xml specific attributes for Lollipop and above are added -->
    </style>

    <!-- currently only used to easily switch between AppThemeLight and AppThemeDark -->
    <style name="AppTheme" parent="AppThemeLight">

    </style>

    <!-- Floating Action Button -->

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">?attr/fabTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

        <item name="menu_shadowColor">?attr/fabShadowColor</item>
        <item name="menu_colorNormal">?attr/colorPrimary</item>
        <item name="menu_colorPressed">?attr/colorAccent</item>
        <item name="menu_colorRipple">?attr/colorPrimaryDark</item>

        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="android:textColor">?attr/fabTextColor</item>

        <item name="fab_size">mini</item>

        <item name="fab_shadowColor">?attr/fabShadowColor</item>
        <item name="fab_colorNormal">?attr/colorAccent</item>
        <item name="fab_colorPressed">?attr/colorPrimary</item>
        <item name="fab_colorRipple">?attr/colorPrimaryDark</item>

        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>

        <item name="android:src">@drawable/fab_add</item>
    </style>


    <!-- Text styles -->

    <style name="EntityFieldName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EntityFieldValue">
        <item name="android:textColor">?attr/entityFieldValueTextColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="EditableEntityFieldValue" parent="EntityFieldValue">
        <item name="android:layout_marginTop">-6dp</item>
        <item name="backgroundTint">@color/entity_field_divider_color</item>
    </style>

</resources>
