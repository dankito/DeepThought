<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@drawable/primary_color_gradient</item>
        <!-- remove space between close button and title text view -->
        <item name="titleMarginStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@drawable/primary_color_gradient</item>
        <item name="height">@dimen/toolbar_height</item>
    </style>


    <style name="SwipeButtonStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/swipe_button_margin</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/swipe_button_background</item>
    </style>


    <style name="FullscreenDialog" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:padding">0dp</item>
        <!--<item name="android:paddingTop">@*android:dimen/status_bar_height</item>-->
    </style>


    <!-- Floating Action Button -->

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

        <item name="menu_shadowColor">#444</item>
        <item name="menu_colorNormal">?attr/colorPrimary</item>
        <item name="menu_colorPressed">?android:attr/colorAccent</item>
        <item name="menu_colorRipple">?android:attr/colorPrimaryDark</item>

        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="android:textColor">#FFFFFF</item>

        <item name="fab_size">mini</item>

        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
        <item name="fab_colorRipple">@color/colorPrimaryDark</item>

        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>

        <item name="android:src">@drawable/fab_add</item>
    </style>


    <!-- Text styles -->

    <style name="Header1Style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Header2Style">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="TextBodyStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#b8b8b8</item>
    </style>

    <style name="EntityFieldName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/entity_field_name_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EntityFieldValue">
        <item name="android:textColor">@color/entity_field_value_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="EditableEntityFieldValue" parent="EntityFieldValue">
        <item name="android:layout_marginTop">-6dp</item>
        <item name="backgroundTint">@color/entity_field_divider_color</item>
    </style>

    <style name="ChevronRightStyle">
        <item name="android:layout_width">@dimen/chevron_right_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/chevron_right_margin_left</item>
        <item name="android:layout_marginStart">@dimen/chevron_right_margin_left</item>
        <item name="android:src">@drawable/ic_chevron_right_black_48dp</item>
        <!-- according to design actually colorPrimary should be used-->
        <item name="android:tint">@color/colorAccent</item>
    </style>


    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_line_color</item>
        <item name="android:layout_marginLeft">@dimen/divider_margin_left_right</item>
        <item name="android:layout_marginStart">@dimen/divider_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/divider_margin_left_right</item>
        <item name="android:layout_marginEnd">@dimen/divider_margin_left_right</item>
    </style>

</resources>
