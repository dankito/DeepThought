<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lytReference"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_edit_entry_field_height"
        android:layout_toLeftOf="@+id/btnClearEntryReference"
        android:layout_toStartOf="@+id/btnClearEntryReference"
        android:layout_marginLeft="@dimen/activity_edit_entry_field_margin_left"
        android:layout_marginStart="@dimen/activity_edit_entry_field_margin_left"
        android:layout_marginRight="@dimen/activity_edit_entry_field_margin_right"
        android:layout_marginEnd="@dimen/activity_edit_entry_field_margin_right"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
    >

        <TextView
            android:id="@+id/txtEntryReferenceLabel"
            style="@style/EntryFieldName"
            android:text="@string/activity_edit_entry_reference_label"
        />

        <TextView
            android:id="@+id/txtEntryReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEntryReferenceLabel"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/EntryFieldValue"
        />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnClearEntryReference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lytReference"
        android:layout_alignBottom="@+id/lytReference"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_delete"
    />

    <View
        android:id="@+id/dvReferenceDivider"
        android:layout_below="@+id/lytReference"
        style="@style/DividerStyle"
    />

    <RelativeLayout
        android:id="@+id/lytTagsOnEntry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_edit_entry_field_height"
        android:layout_marginLeft="@dimen/activity_edit_entry_field_margin_left"
        android:layout_marginStart="@dimen/activity_edit_entry_field_margin_left"
        android:layout_marginRight="@dimen/activity_edit_entry_field_margin_right"
        android:layout_marginEnd="@dimen/activity_edit_entry_field_margin_right"
        android:layout_below="@+id/dvReferenceDivider"
        android:gravity="center_vertical"
    >

        <TextView
            android:id="@+id/txtTagsOnEntryLabel"
            style="@style/EntryFieldName"
            android:text="@string/activity_edit_entry_tags_label"
        />

        <TextView
            android:id="@+id/txtTagsOnEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTagsOnEntryLabel"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/EntryFieldValue"
        />

    </RelativeLayout>

    <View
        android:id="@+id/dvTagsDivider"
        android:layout_below="@+id/lytTagsOnEntry"
        style="@style/DividerStyle"
    />

    <RelativeLayout
        android:id="@+id/lytAbstract"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_edit_entry_field_height"
        android:layout_marginLeft="@dimen/activity_edit_entry_field_margin_left"
        android:layout_marginStart="@dimen/activity_edit_entry_field_margin_left"
        android:layout_marginRight="@dimen/activity_edit_entry_field_margin_right"
        android:layout_marginEnd="@dimen/activity_edit_entry_field_margin_right"
        android:layout_below="@+id/dvTagsDivider"
        android:gravity="center_vertical"
    >

        <TextView
            android:id="@+id/txtEntryAbstractLabel"
            style="@style/EntryFieldName"
            android:text="@string/activity_edit_entry_abstract_label"
        />

        <TextView
            android:id="@+id/txtEntryAbstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEntryAbstractLabel"
            android:maxLines="2"
            android:ellipsize="end"
            style="@style/EntryFieldValue"
        />

    </RelativeLayout>

</RelativeLayout>