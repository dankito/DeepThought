<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tagOnEntrySwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_tag_on_entry_height"
    android:clickable="true"
    android:focusable="true"
>
    <!-- clickable and focusable are needed so that list item receives click events -->

    <!-- Bottom View Start (the view that gets displayed when the user swipes from right to left. for explanation see https://github.com/daimajia/AndroidSwipeLayout/wiki/usage) -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
    >

        <ImageButton
            android:id="@+id/btnEditTag"
            android:layout_width="@dimen/list_item_tag_on_entry_button_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mode_edit_white_48dp"
            android:scaleType="fitCenter"
        />

        <ImageButton
            android:id="@+id/btnDeleteTag"
            android:layout_width="@dimen/list_item_tag_on_entry_button_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_white_48dp"
            android:scaleType="fitCenter"
        />

    </LinearLayout>


    <!-- Surface View Start (the view that's displayed by default) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vwIsTagOnEntryBorder"
            android:layout_width="@dimen/list_item_tag_on_entry_added_border_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/list_item_tag_on_entry_added_border_margin_right"
            android:layout_marginEnd="@dimen/list_item_tag_on_entry_added_border_margin_right"
            android:background="@color/tag_added_to_entry"
        />

        <ImageView
            android:id="@+id/imgIsTagAddedToEntry"
            android:layout_width="@dimen/list_item_tag_on_entry_icon_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vwIsTagOnEntryBorder"
            android:layout_toEndOf="@+id/vwIsTagOnEntryBorder"
            android:layout_marginRight="@dimen/list_item_tag_on_entry_icon_margin_right"
            android:layout_marginEnd="@dimen/list_item_tag_on_entry_icon_margin_right"
            android:src="@drawable/ic_add"
        />

        <TextView
            android:id="@+id/txtvwTagName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imgIsTagAddedToEntry"
            android:layout_toEndOf="@+id/imgIsTagAddedToEntry"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="start|center_vertical"
            android:textColor="@color/default_text_color"
        />

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>