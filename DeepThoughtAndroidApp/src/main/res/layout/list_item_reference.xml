<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/referenceSwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_reference_height"
    android:background="@drawable/list_item_background"
>

    <!-- Bottom View Start (the view that gets displayed when the user swipes from right to left. for explanation see https://github.com/daimajia/AndroidSwipeLayout/wiki/usage) -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
    >

        <ImageButton
            android:id="@+id/btnEditReference"
            android:layout_width="@dimen/list_item_reference_button_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mode_edit_white_48dp"
            android:scaleType="fitCenter"
        />

        <ImageButton
            android:id="@+id/btnShareReference"
            android:layout_width="@dimen/list_item_reference_button_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_share_white_48dp"
            android:scaleType="fitCenter"
        />

        <ImageButton
            android:id="@+id/btnDeleteReference"
            android:layout_width="@dimen/list_item_reference_button_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_white_48dp"
            android:scaleType="fitXY"
        />

    </LinearLayout>


    <!-- Surface View Start (the view that's displayed by default) -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/list_item_reference_margin_left"
                    android:layout_marginStart="@dimen/list_item_reference_margin_left"
                    android:gravity="center_vertical"
    >

        <ImageView
            android:id="@+id/imgIsReferenceSetOnEntry"
            android:layout_width="@dimen/list_item_reference_on_entry_icon_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/list_item_reference_on_entry_icon_right_margin"
            android:layout_marginEnd="@dimen/list_item_reference_on_entry_icon_right_margin"
            android:src="@drawable/ic_add"
            android:visibility="gone"
        />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgIsReferenceSetOnEntry"
            android:layout_toEndOf="@+id/imgIsReferenceSetOnEntry"
            android:layout_toLeftOf="@+id/txtChevronRight"
            android:layout_toStartOf="@+id/txtChevronRight"
            android:layout_centerVertical="true"
            android:gravity="start|center_vertical"
        >

            <TextView
                android:id="@+id/txtReferenceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/Header1Style"
            />

            <TextView
                android:id="@+id/txtReferenceSeriesAndPublishingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReferenceTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/list_item_reference_series_preview_margin_top"
                android:gravity="center_vertical"
                android:lines="1"
                android:ellipsize="end"
                style="@style/Header2Style"
            />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtChevronRight"
            style="@style/ChevronRightStyle"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
        />

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>