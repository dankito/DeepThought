<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_reference_height"
                android:layout_marginLeft="@dimen/list_item_reference_margin_left"
                android:layout_marginStart="@dimen/list_item_reference_margin_left"
                android:gravity="center_vertical"
>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/txtChevronRight"
        android:layout_toStartOf="@+id/txtChevronRight"
        android:layout_centerVertical="true"
    >

        <TextView
            android:id="@+id/txtReferenceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            style="@style/Header1Style"
        />

        <TextView
            android:id="@+id/txtReferenceSeriesAndPublishingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_reference_series_preview_margin_top"
            android:gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            style="@style/Header2Style"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/txtChevronRight"
        style="@style/ChevronRightStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
    />

</RelativeLayout>