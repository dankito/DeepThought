<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/toolbar"
    >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcyTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/txtvwDesignPreviewHint"
            android:layout_marginTop="@dimen/dialog_tags_on_entry_tag_list_tags_margin"
            android:layout_marginLeft="@dimen/dialog_tags_on_entry_tag_list_tags_margin"
            android:layout_marginRight="@dimen/dialog_tags_on_entry_tag_list_tags_margin"
            android:layout_marginBottom="@dimen/dialog_tags_on_entry_tag_list_tags_margin_bottom"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:scrollbars="vertical"
        />

        <TextView
            android:id="@+id/txtvwDesignPreviewHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtvwEntryTagsPreviewLabel"
            android:layout_marginLeft="@dimen/dialog_tags_on_entry_tag_preview_label_margin_left_right"
            android:layout_marginBottom="6dp"
            android:textSize="@dimen/dialog_tags_on_entry_tag_preview_text_size"
            android:textStyle="italic"
            android:textColor="#FF0000"
            android:text="Early design preview - not fully functional"
        />

        <TextView
            android:id="@+id/txtvwEntryTagsPreviewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lytTagsPreview"
            android:layout_marginLeft="@dimen/dialog_tags_on_entry_tag_preview_label_margin_left_right"
            android:layout_marginRight="@dimen/dialog_tags_on_entry_tag_preview_label_margin_left_right"
            android:textSize="@dimen/dialog_tags_on_entry_tag_preview_text_size"
            android:text="@string/dialog_tags_on_item_tags_label"
        />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/lytTagsPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dialog_tags_on_entry_tag_preview_min_height"
            android:layout_above="@+id/edtxtEditEntrySearchTag"
            android:layout_toRightOf="@+id/txtvwEntryTagsPreviewLabel"
            android:layout_toEndOf="@+id/txtvwEntryTagsPreviewLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dialog_tags_on_entry_tag_preview_margin_top"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:alignItems="flex_start"
            app:alignContent="flex_start"
            app:justifyContent="flex_start"
            app:showDivider="middle"
            app:dividerDrawable="@drawable/flexbox_tags_on_entry_divider"
        />

        <EditText
            android:id="@+id/edtxtEditEntrySearchTag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_tags_on_entry_tag_search_tags_height"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dialog_tags_on_entry_tag_search_tags_margin_right"
            android:layout_marginEnd="@dimen/dialog_tags_on_entry_tag_search_tags_margin_right"
            android:textSize="@dimen/dialog_tags_on_entry_tag_search_tags_text_size"
            android:inputType="text"
            android:imeOptions="flagNoExtractUi"
            android:hint="@string/dialog_tags_on_item_search_tags_hint"
        />

    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentBottom="true"
        style="@style/ToolbarStyle"
        app:title="@string/dialog_tags_on_item_title"
        />

</RelativeLayout>