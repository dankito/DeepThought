<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dialog_tags_on_entry_tag_preview_margin_top"
        android:layout_above="@+id/toolbar"
    >

        <TextView
            android:id="@+id/txtvwEntryTagsPreviewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/lytTagsPreview"
            android:layout_alignBottom="@+id/lytTagsPreview"
            android:layout_marginLeft="@dimen/dialog_tags_on_entry_tag_preview_label_margin_left_right"
            android:layout_marginRight="@dimen/dialog_tags_on_entry_tag_preview_label_margin_left_right"
            android:textSize="@dimen/dialog_tags_on_entry_tag_preview_text_size"
            android:text="@string/dialog_tags_on_entry_tags_label"
        />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/lytTagsPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/txtvwEntryTagsPreviewLabel"
            android:layout_toEndOf="@+id/txtvwEntryTagsPreviewLabel"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:alignItems="flex_start"
            app:alignContent="flex_start"
            app:justifyContent="flex_start"
            app:showDivider="middle"
            app:dividerDrawable="@drawable/flexbox_tags_on_entry_divider"
        />

        <EditText
            android:id="@+id/edtxtEditEntrySearchTag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_tags_on_entry_tag_search_tags_height"
            android:layout_below="@+id/lytTagsPreview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnEditEntryCreateOrToggleTags"
            android:layout_toStartOf="@+id/btnEditEntryCreateOrToggleTags"
            android:layout_marginRight="@dimen/dialog_tags_on_entry_tag_search_tags_margin_right"
            android:layout_marginEnd="@dimen/dialog_tags_on_entry_tag_search_tags_margin_right"
            android:textSize="@dimen/dialog_tags_on_entry_tag_search_tags_text_size"
            android:inputType="text"
        />

        <Button
            android:id="@+id/btnEditEntryCreateOrToggleTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dialog_tags_on_entry_tag_search_tags_button_min_width"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/edtxtEditEntrySearchTag"
            android:textSize="@dimen/dialog_tags_on_entry_tag_search_tags_text_size"
            android:text="@string/dialog_tags_on_entry_create_tag"
            android:enabled="false"
        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcyTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtxtEditEntrySearchTag"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dialog_tags_on_entry_tag_list_tags_margin"
            android:layout_marginRight="@dimen/dialog_tags_on_entry_tag_list_tags_margin"
            android:layout_marginBottom="@dimen/dialog_tags_on_entry_tag_list_tags_margin"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />

    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        style="@style/ToolbarStyle"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>