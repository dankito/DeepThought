<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/content_layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_entity_activity_background"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/move_upward_behaviour"
    >

        <include
            layout="@layout/layout_context_help"
            android:id="@+id/lytContextHelpSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
        />

        <RelativeLayout
            android:id="@+id/lytEntryFieldsPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytContextHelpSave"
            android:layout_marginTop="@dimen/activity_edit_entry_fields_margin_top"
            android:layout_marginLeft="@dimen/activity_edit_entry_field_margin_left"
            android:layout_marginStart="@dimen/activity_edit_entry_field_margin_left"
            android:layout_marginRight="@dimen/activity_edit_entry_field_margin_right"
            android:layout_marginEnd="@dimen/activity_edit_entry_field_margin_right"
        >

            <net.dankito.deepthought.android.views.EditEntityField
                android:id="@+id/lytAbstractPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
            />

            <net.dankito.deepthought.android.views.EditEntityField
                android:id="@+id/lytReferencePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lytAbstractPreview"
            />

            <net.dankito.deepthought.android.views.EditEntityField
                android:id="@+id/lytTagsPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lytReferencePreview"
            />

        </RelativeLayout>


        <TextView
            android:id="@+id/txtEntryContentLabel"
            android:layout_width="wrap_content"
            android:layout_below="@+id/lytEntryFieldsPreview"
            android:layout_marginLeft="@dimen/activity_edit_entry_field_margin_left"
            android:layout_marginStart="@dimen/activity_edit_entry_field_margin_left"
            android:layout_marginRight="@dimen/activity_edit_entry_field_margin_right"
            android:layout_marginEnd="@dimen/activity_edit_entry_field_margin_right"
            android:layout_marginBottom="@dimen/activity_edit_entry_content_label_margin_bottom"
            style="@style/EntityFieldName"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:text="@string/activity_edit_item_content_label"
        />

        <ProgressBar
            android:id="@+id/prgIsLoadingWebPage"
            android:layout_width="@dimen/activity_edit_entry_progress_is_loading_web_page_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtEntryContentLabel"
            android:layout_toEndOf="@+id/txtEntryContentLabel"
            android:layout_alignTop="@+id/txtEntryContentLabel"
            android:layout_alignBottom="@+id/txtEntryContentLabel"
            android:visibility="gone"
        />

        <include
            layout="@layout/layout_context_help"
            android:id="@+id/lytContextHelpFullscreenMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEntryContentLabel"
        />

        <LinearLayout
            android:id="@+id/lytContentWebViewAndOnboardingText"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytContextHelpFullscreenMode"
            android:layout_above="@+id/appBarLayout"
        >

            <RelativeLayout
                android:id="@+id/lytContentWebView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
            >

                <net.dankito.deepthought.android.views.FullscreenWebView
                    android:id="@+id/wbvwContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                />

                <LinearLayout
                    android:id="@+id/lytFullscreenWebViewOptionsBar"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fullscreen_web_view_options_bar_button_height"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                >

                    <ImageButton
                        android:id="@+id/btnLeaveFullscreen"
                        android:layout_width="@dimen/fullscreen_web_view_options_bar_button_width"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_fullscreen_exit_white_48dp"
                    />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lytOnboardingText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
            >

                <TextView
                    android:id="@+id/txtOnboardingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_edit_entry_onboarding_left_right_margin"
                    android:layout_marginStart="@dimen/activity_edit_entry_onboarding_left_right_margin"
                    android:layout_marginRight="@dimen/activity_edit_entry_onboarding_left_right_margin"
                    android:layout_marginEnd="@dimen/activity_edit_entry_onboarding_left_right_margin"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:ellipsize="end"
                    android:minLines="2"
                />

                <net.dankito.deepthought.android.views.PointToFloatingActionButtonArrow
                    android:id="@+id/arrowToFloatingActionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOnboardingText"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                />

            </RelativeLayout>

        </LinearLayout>


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:title="@string/activity_edit_item_title"
                style="@style/ToolbarStyle"/>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

    <include
        layout="@layout/view_floating_action_button_entry_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        app:layout_behavior="@string/move_upward_behaviour"
    />

</android.support.design.widget.CoordinatorLayout>